{{! Each post will be output using this markup }}
{{#foreach posts}}

    <article class="{{post_class}} panel panel-primary">
        <header class="panel-heading">
            <h3 class="panel-title">
                <span class="post-meta">
                    <div class="post-meta__item">
                        <i class="fa fa-calendar-o"></i><time datetime="{{date format='MM-DD-YYYY'}}">{{date format="MMM DD YYYY"}}</time>
                    </div>
                    <div class="post-meta__item">
                        {{#if tags}}<i class="fa fa-tags"></i>{{tags}}{{/if}}
                    </div>
                    <div class="post-meta__item">
                        <i class="fa fa-user"></i>{{author}}
                    </div>
                </span>
            </h3>
        </header>
        <div class="panel-body">
            <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
            <section class="post-excerpt">
                <p>{{excerpt}}&hellip;<span><a href="{{url}}">READ MORE</a></span></p>
            </section>
        </div>
    </article>

{{/foreach}}

