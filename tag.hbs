{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
{{> "header"}}

{{! The main content area on the homepage }}
<main class="site-main row" role="main">
    <section class="site-main__content col-sm-8">

        <ol class="breadcrumb">
            <li><a href="{{@blog.url}}">Home</a></li>
            <li class="active"><a href="{{@blog.url}}/tag/{{tag.slug}}/">{{tag.name}}</a></li>
        </ol>
        <div class="tag-well well">
            <h3><i class="fa fa-tag"></i>Tag: {{tag.name}}</h3>
            <div class="tag-body">A {{pagination.total}}-post collection</div>
        </div>

        {{! The tag below includes the post loop - partials/loop.hbs }}
        {{> "loop"}}
    </section>
    {{> sidebar}}

</main>